using System;

public class HelloWorld
{
    public static void Main(string[] args)
    {
        Console.WriteLine("Enter a number:");
        string input = Console.ReadLine();
        int x = Convert.ToInt32(input);

        for (int i = 0; i < x; i++)
        {
           for(int j=0;j<x-i;j++){
               Console.Write(" "); 
           }
           for(int j=0;j<2*i+1;j++){
               Console.Write("*");
           }
           Console.WriteLine();
        }
    }
}
